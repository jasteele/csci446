- content_for :subtitle do
  \... my cousin works for Bit.ly
.content_div
  = link_to image_tag("arrow_left.png", :border => 0) +'Back' , :back
  %h2
    Editing "#{h @article.title}"
  %br/
  - form_for(@article) do |f|
    = f.error_messages
    %p
      = f.label :title
      = f.text_field :title
    %p
      = f.label :author_id
      = f.select :author_id, @authors.collect { |a| [a.name, a.id]}, :include_blank => true
    %p
      = f.label :body
      = f.text_area :body
    %p
      = f.submit 'Save Changes'