<h6 class="subtitle">... with a name .com hipsters love! </h6>
<div id="toolbar">
	<h2>All the World's Articles</h2>
	<%= link_to image_tag("add.png", :border=>0) + 'Create an Article', new_article_path, {:title => "Create a new article"} %>

</div>
<br />
<div id="articles_list">
	<table>
	  <tr>
		<th>Title</th>
		<th>Author</th>
		<th>Body</th>
		<th>Creation Date</th>
	  </tr>


	<% @articles.each do |article| %>
	  <tr class="<%= cycle('list-line-odd', 'list-line-even') %>">
		<td><%=h truncate(article.title, :length => 15) %></td>
		<td><%=h truncate(article.author,:length => 15) %></td>
		<td><%=h truncate(article.body, :length => 40) %></td>
		<td><%=h article.created_at.strftime("%A, %b. %d %Y")%></td>
		<td class="buttons"><%= link_to image_tag("magnifier.png", :border=>0), article, {:title => "View article"} %></td>
		<td class="buttons"><%= link_to image_tag("application_edit.png", :border=>0), edit_article_path(article), {:title => "Edit article"} %></td>
		<td class="buttons"><%= link_to image_tag("bin.png", :border=>0), article, :confirm => 'Are you sure?', :method => :delete, :title => "Delete article" %></td>
	  </tr>
	<% end %>
	</table>
</div>
<br />
<p><%=h pluralize(@articles.count, "article") %></p>

