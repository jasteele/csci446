<h6 class="subtitle"> ...not just for the country of Spain </h6>
<%= link_to image_tag("arrow_left.png", :border => 0)+ "back", articles_path, :title => "Back to the articles list" %>
<h1>Creating a New Article</h1>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Create!' %>
  </p>
<% end %>

