<h1>Edit User Profile</h1>

<% form_for([:admin, @user], :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <p>
	<%= f.label :username%><br />
	<% if current_user.role.name == "admin" %>
		<%= f.text_field :username %>
	<%else%>
		<%= f.text_field :username, :disabled => true %>
	<%end%>
    
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
   <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label "First Name" %><br />
    <%= f.text_field :fname %>
  </p>
  <p>
    <%= f.label "Last Name" %><br />
    <%= f.text_field :lname %>
  </p>
  <% if @user.photo? %>
	<%= image_tag @user.photo.url, :id => "user_image" %>
  <% end %>
  <p>
    <%= f.label :photo %><br />
    <%= f.file_field :photo %>
  </p>
  <p>
	<% if current_user.role.name == "admin" %>
		<%= f.collection_select(:role_id, Admin::RolesController.get_roles, :id, :name)%>
	<%end%>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>
